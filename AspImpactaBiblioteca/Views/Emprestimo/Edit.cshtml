@model AspImpactaBiblioteca.Models.Entities.Emprestimo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar empréstimos</h2>

@using (Html.BeginForm("Edit", "Emprestimo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">date_range</i>
                @Html.EditorFor(model => model.DataDevolucao, new { htmlAttributes = new { @placeholder = "Data de devolução", @class = "datepicker" } })                
            </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">
            Salvar alterações
            <i class="material-icons right">send</i>
        </button>

        @Html.ActionLink("Cancelar", "Listar", "Emprestimo", new { @class = "btn waves-effect waves-light red" })

    </div>

}

