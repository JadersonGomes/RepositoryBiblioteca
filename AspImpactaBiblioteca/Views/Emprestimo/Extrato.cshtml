@model AspImpactaBiblioteca.Models.Entities.Emprestimo

@{
    ViewBag.Title = "Extrato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Extrato</h2>

@using (Html.BeginForm("Create", "Pagamento", FormMethod.Post))
{    

    <div class="row">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">person_outline</i>
                @Html.EditorFor(model => model.Cliente.Nome)
                @Html.LabelFor(model => model.Cliente.Nome)
                @Html.ValidationMessageFor(model => model.Cliente.Nome)
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">import_contacts</i>
                @Html.EditorFor(model => model.Livro.Nome)
                @Html.LabelFor(model => model.Livro.Nome)
                @Html.ValidationMessageFor(model => model.Livro.Nome)
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">date_range</i>
                @Html.LabelFor(model => model.DataEmprestimo)
                @Html.TextBox(" ", Model.DataEmprestimo.ToShortDateString(), new { @class = "datepicker" })           
                @Html.ValidationMessageFor(model => model.DataEmprestimo)
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">date_range</i>     
                @Html.LabelFor(model => model.DataDevolucao)           
                @Html.TextBox(" ", DateTime.Now.ToShortDateString(), new { @class = "datepicker" })                        
                @Html.ValidationMessageFor(model => model.DataDevolucao)                
                
            </div>
            
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">attach_money</i>
                @Html.EditorFor(model => model.Cliente.valorPagar)
                @Html.LabelFor(model => model.Cliente.valorPagar)
                @Html.ValidationMessageFor(model => model.Cliente.valorPagar)
            </div>
        </div>
    </div>

    @Html.ActionLink("Voltar", "Listar", "Emprestimo", new { @class = "waves-effect waves-light light-blue btn" })
    <a class="waves-effect waves-light btn teal accent-3" href="@Url.Action("Create", "Pagamento", new { id = Model.Id })">registrar pagamento</a>



}













