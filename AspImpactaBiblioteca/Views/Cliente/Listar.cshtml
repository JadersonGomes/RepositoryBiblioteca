@model IEnumerable<AspImpactaBiblioteca.Models.Entities.Cliente>

@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de clientes</h2>

<p>@Html.ActionLink("Novo", "Create", "Cliente", new { @class = "waves-effect waves-light btn" })</p>

@using (Html.BeginForm(null, null, FormMethod.Post))
{


    <table class="table responsive-table" id="__AjaxAntiForgeryForm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Cpf)</th>  
                <th>@Html.DisplayNameFor(model => model.valorPagar)</th>               
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.Cpf</td> 
                    <td>R$ @item.valorPagar</td>                   
                    <td>
                        <a href="@Url.Action("Edit", "Cliente", new { id = item.Id })" class="btn-floating btn-small waves-effect waves-light red icones"><i class="material-icons">edit</i></a>
                        <a class="excluirCliente btn-floating btn-small waves-effect waves-light blue icones" data-id="@item.Id"><i class="material-icons">delete</i></a>

                    </td>
                </tr>

            }

        </tbody>
    </table>
}

<div id="modalExcluirCliente" class="modal">
    <div class="modal-content">
        <h4>Excluir este Cliente?</h4>
        <p>Atenção! Ao remover este item, você não poderá recuperá-lo.</p>
    </div>

    <div class="modal-footer">

        @Html.AntiForgeryToken()
        <button type="button" href="#!" class="modal-action modal-close waves-effect waves-red btn-flat">Cancelar</button>
        <button id="btnConfirmarExclusaoCliente" type="button" class="modal-action modal-close waves-effect waves-green btn-flat">Confirmar</button>

    </div>
</div>


